                          <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                          <outputDirectory>${jbpm.war.output}</outputDirectory>
                          <filters>
                            <filter>${project.basedir}/src/main/properties/common-deploy.properties</filter>
